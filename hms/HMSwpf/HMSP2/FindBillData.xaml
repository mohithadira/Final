<Window x:Class="HMSPresentation.FindBillData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMSPresentation"
        mc:Ignorable="d"
        Title="FindBillData" Height="450" Width="800">
    <Grid>
        <Grid Background="#FF9FDCCE">
            <Label Content="Patient Bill Details" HorizontalAlignment="Left" Margin="336,16,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20" Background="#FFDEABE0"/>
            <Label Content="Enter patient id to find the bill details:" HorizontalAlignment="Left" Margin="99,79,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="14"/>
            <TextBox Name="txtPatientId" HorizontalAlignment="Left" Height="23" Margin="336,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button Name="Btn_Submit" Content="Submit" HorizontalAlignment="Left" Margin="488,82,0,0" VerticalAlignment="Top" Width="75" Background="#FFA0E77A" Click="Btn_Submit_Click"/>
            <DataGrid Name="DataGridBillData" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="258" Margin="104,119,0,0" VerticalAlignment="Top" Width="598" Background="#FF9DE1E5"/>
            <Button Name="Btn_BackToMenu" Content="Back to Menu" HorizontalAlignment="Left" Margin="361,391,0,0" VerticalAlignment="Top" Width="84" Background="#FFD17E56" Click="Btn_BackToMenu_Click"/>

        </Grid>
    </Grid>
</Window>
